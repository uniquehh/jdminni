<!--index.wxml-->
<page-meta>
  <navigation-bar title=" ">
  </navigation-bar>
</page-meta>
<view class="index">
  <view class="search">
    <view class="search-box">
      <view class="inputbox">
      <image src="../../img/hsearch1.svg"></image>
        <input placeholder="游戏主机" type="text" />
      </view>
      <view class="btn">搜索</view>
    </view>
  </view>
  <view class="container">
    <view class="aside">
      <scroll-view
      scroll-y="true"
      enhanced="{{true}}"
      show-scrollbar="{{false}}"
      bounces="{{true}}"
      >
        <view class="menu" wx:for="{{aside}}" wx:key="index">{{item.type_name}}
        </view>
      </scroll-view>
    </view>
    <view class="main">
      <scroll-view
      scroll-y="true"
      >
        <view class="head">
          头部标题
        </view>
        <view class="wrap">
          <view class="list">
            <view class="itembox"
              wx:for="{{produce}}"
              wx:for-index="indexs"
              wx:for-item="items"
              wx:key="indexs"
              wx:if="{{items.children.length>0}}"
            >
              <view>{{items.type_name}}</view>
              <view
              class="item" wx:for="{{items.children}}" wx:for-index="indexss"
              wx:for-item="itemss"
              bindtap="toCategory" 
              data-goodType="{{itemss}}"
              wx:key="indexss"
              open-type="navigate"
              >
                <image aspectFit src="/img/m_taylor.png"></image>
                <view>{{itemss.type_name}}</view>
              </view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
  <page-container show="" position="right" custom-style="margin-left: 50px;">弹出内容</page-container>
</view>