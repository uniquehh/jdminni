/* pages/hadreslist/hadreslist.wxss */
.bordertop{
  border-top: 2rpx solid #F5F5F5;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
}
.adrslist{
  padding: 30rpx;
  font-size: 32rpx;
}
.address::after{
  content: "";
  display: block;
  height: 100rpx;
  position: sticky;
}
.adrsitem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #F5F5F5;
  padding: 10rpx 0 40rpx 0;
  margin-bottom: 30rpx;
}
.radiolabel{
  display: flex;
  align-items: center;
}
.radio{
  margin-right: 26rpx;
}
.radiolabel .wx-radio-input {
  width: 40rpx;
  height: 40rpx;
  background: none;
}
.radiolabel .wx-radio-input.wx-radio-input-checked {
  background-color: red !important;
}
.adrsbasic{
  display: flex;
  align-items: center;
}
.moren{
  background-color: red; 
  color: white;
  width: 58rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
  margin-right: 10rpx;
}
.adrstext{
  font-size: 28rpx;
  color: gray;
}
.xiaoqu{
  font-size: 40rpx;
  font-weight: bold;
}
.basicinfo{
  color: gray;
}
.editimg{
  width: 60rpx;
  height: 60rpx;
  background-color: #F5F5F5;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
}
.editimg image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.addadres{
  position: fixed;
  padding: 16rpx 0;
  bottom: 0;
  width: 750rpx;
  left: 0;
}
.addbtn{
  background: -webkit-linear-gradient(315deg,#fa2c19 0,#fa3f19 45%,#fa5919 83%,#fa6419 100%);
  background: -o-linear-gradient(315deg,#fa2c19 0,#fa3f19 45%,#fa5919 83%,#fa6419 100%);
  background: linear-gradient(135deg,#fa2c19 0,#fa3f19 45%,#fa5919 83%,#fa6419 100%);
  color: #fff;
  text-align: center;
  padding: 26rpx 0;
  margin: 0 26rpx;
  border-radius: 60rpx;
}