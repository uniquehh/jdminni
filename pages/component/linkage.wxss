/* pages/component/filt.wxss */
.chooseType{
  padding:10px 5px 0 5px;
  background-color: white;
  margin-bottom:15px;
}
.chooseitem{
  width: 30%;
  float: left;
  background-color: #F7F7F7;
  margin:0 5px 10px 5px;
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  text-align: center;
  color:#666;
  border-radius: 3px;
}
.chooseType::after{
  content: "";
  display: block;
  clear: both;
}
.title{
  background-color: white;
  padding:10px;
  margin-bottom:15px;
}
.price{
  background-color: white;
  margin-bottom: 15px;
}
.p_title{
  padding:10px;
  border-bottom: 1px solid #eee;
}
.input{
  background-color: #F7F7F7;
  display: inline-block;
  width: 45%;
  height: 40px;
}
.line{
  height: 1px;
  width: 10px;
  margin:0 10px 20px 10px;
  background-color: #eee;
}
.p_input{
  padding:10px 10px 8px 10px;
}
.choosePrice{
  /* padding:5px 0; */
  padding-top:0;
}
.priceitem{
  width: 30%;
  height:40px;
  text-align: center;
}
.priceitem view:last-of-type{
  font-size: 12px;
  color:#999;
  margin-top:-15px;
}
.priceitem view:first-of-type{
  font-size: 13px;
  margin-top:-3px;
}
.chooseitem .brandbtn{
  display: block;
  width: 100%; 
  height: 100%;
  background-color: white;
  font-weight: normal;
  border: 1px solid #f7f7f7;
  padding:0;
}
.clear{
  padding:5px 10px 15px 10px;
}
.clear .clearchoose{
  background-color: white;
  display: block;
  width: 100%;
  border: 1px solid #eee;
  font-weight: normal;
  font-size: 16px;
}
.address{
  float: right;
  font-size: 12px;
  margin-top: 3px;
  color:#E4393C;
}
.title::after{
  content: '';
  display: block;
  clear: both;
}
.alltype{
  color:#999;
}
.items{
  /* margin-left:5px; */
  display: block;
  background-color: white;
  padding:10px 10px 10px 8px;
}
.ld{
  position: fixed;
  right: 0;
  top:30%;
  z-index: 2;
}
.lditem{
  padding:5px
}
.zmtitle{
  background-color: white;
  display: inline-block;
  width: 50%;
  text-align: center;
}
.check{
  background-color: red;
  padding:5px;
  border-radius: 50%;
  color: white;
}