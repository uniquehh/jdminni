/* pages/haddadres/haddadres.wxss */
.bordertop{
  border-top: 2rpx solid #F5F5F5;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
}
.addadres{
  background-color: #F5F5F5;
  min-width: 375px;
  height: 100vh;
}
.addmain{
  font-size: 32rpx;
}
.addbesic{
  background-color: white;
  padding: 0 30rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  margin-bottom: 30rpx;
}
.besictext{
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
}
.besictext>text{
  margin-right: 30rpx;
  width: 140rpx;
}
.teltext{
  margin-right: 0 !important;
}
.telimg{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  margin: 0 20rpx 0 10rpx;
}
.pickerbox{
  flex: 1 1 auto;
}
.picker{
  flex: 1 1 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pickerimage{
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}
.besiclast{
  border-bottom: none !important;
}
.orattribute{
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.odatmain{
  padding: 30rpx;
}
/* 标签 */
.tagtext{
  width: 140rpx;
  margin-right: 30rpx;
}
.tags{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.tagbox{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.tagbox .tag{
  width: 120rpx;
  padding: 10rpx 0rpx;
  border: 2rpx solid gray;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.addtag{
  font-weight: bold;
}
.tagcurr{
  background-color: #4B9BF8;
  color: white;
}
/* 提示文本 */
.tstext{
  font-size: 38rpx;
  margin-bottom: 10rpx;
}
.tishi{
  font-size: 24rpx;
  color: #999;
}
.tishibox .wx-switch-input{
  background-color: red !important;
}
.tishibox{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 确认按钮样式 */
.confirm{
  margin-bottom: 20rpx;
}
.cfbtnbox{
  margin: 0 26rpx;
}
.confirmbtn{
  background: -webkit-linear-gradient(315deg,#fa2c19 0,#fa3f19 45%,#fa5919 83%,#fa6419 100%);
  background: -o-linear-gradient(315deg,#fa2c19 0,#fa3f19 45%,#fa5919 83%,#fa6419 100%);
  background: linear-gradient(135deg,#fa2c19 0,#fa3f19 45%,#fa5919 83%,#fa6419 100%);
  color: #fff;
  text-align: center;
  padding: 26rpx 0;
  margin: 0 !important;
  border-radius: 60rpx !important;
  width: 100% !important;
}
.delete{
  background-color: white;
  border: 2rpx solid red;
  color: red;
  text-align: center;
  padding: 24rpx 0;
  margin: 0 !important;
  border-radius: 60rpx !important;
  width: 100% !important;
}
